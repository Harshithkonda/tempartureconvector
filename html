<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Temperature Converter</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }
        h1 {
            text-align: center;
        }
        label {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Temperature Converter</h1>
        <label for="tempInput">Enter Temperature:</label>
        <input type="number" id="tempInput" placeholder="Enter temperature..." step="0.01">
        <select id="fromUnit">
            <option value="celsius">Celsius</option>
            <option value="fahrenheit">Fahrenheit</option>
            <option value="kelvin">Kelvin</option>
        </select>
        <label for="result">Result:</label>
        <p id="result"></p>
        <button onclick="convertTemperature()">Convert</button>
    </div>

    <script>
        function convertTemperature() {
            const tempInput = document.getElementById('tempInput').value;
            const fromUnit = document.getElementById('fromUnit').value;
            const resultElement = document.getElementById('result');
            
            if (fromUnit === 'celsius') {
                // Convert to Fahrenheit and Kelvin
                const fahrenheit = (tempInput * 9/5) + 32;
                const kelvin = parseFloat(tempInput) + 273.15;
                resultElement.textContent = `${tempInput} Celsius = ${fahrenheit.toFixed(2)} Fahrenheit | ${kelvin.toFixed(2)} Kelvin`;
            } else if (fromUnit === 'fahrenheit') {
                // Convert to Celsius and Kelvin
                const celsius = (tempInput - 32) * 5/9;
                const kelvin = (tempInput - 32) * 5/9 + 273.15;
                resultElement.textContent = `${tempInput} Fahrenheit = ${celsius.toFixed(2)} Celsius | ${kelvin.toFixed(2)} Kelvin`;
            } else if (fromUnit === 'kelvin') {
                // Convert to Celsius and Fahrenheit
                const celsius = parseFloat(tempInput) - 273.15;
                const fahrenheit = (parseFloat(tempInput) - 273.15) * 9/5 + 32;
                resultElement.textContent = `${tempInput} Kelvin = ${celsius.toFixed(2)} Celsius | ${fahrenheit.toFixed(2)} Fahrenheit`;
            }
        }
    </script>
</body>
</html>
